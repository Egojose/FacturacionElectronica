<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Facturación Electronica</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link href="~/Content/all.css" rel="stylesheet" />
    <link href="~/Content/menu.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/bootstrap-datetimepicker.css" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <link rel="stylesheet" href="~/Content/themes/base/jquery-ui.min.css" />
    <script src="~/Scripts/facturacionElectronica.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <link href="~/Content/facturacion-electronica.css" rel="stylesheet" />
    <link href="~/Content/sweetalert.min.css" rel="stylesheet" />
    <script src="~/Scripts/sweetalert.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark NavBarCanacol">
        <img class="navbar-brand" src="~/Content/images/logo-master.png" alt="logo">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="nav navbar-nav flex-row justify-content-between ml-auto">
                <li class="nav-item order-2 order-md-1">
                    <a href="#" class="nav-link" title="settings">Bienvenido @HttpContext.Current.User.Identity.Name</a>
                </li>
                <li class="dropdown order-1">
                    @using (Html.BeginForm("LogOut", "Login", FormMethod.Post))
                    {
                        <button type="button" class="btn btn-secondary" onclick="document.forms[0].submit();">Salir <span class="caret"></span></button>
                    }
                </li>
            </ul>
        </div>
    </nav>
    <div class="container main-container">
        @RenderBody()
    </div>

    <footer class="footer text-center">
        <div class="container">
            <p>
                &copy; 2019 ENOVEL S.A
            </p>
        </div>
    </footer>
</body>
</html>
